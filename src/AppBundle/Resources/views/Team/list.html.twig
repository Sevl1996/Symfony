{% extends 'base.html.twig' %}
{% block body %}
    <body style="background-size: cover; background-repeat: no-repeat; background-image:url({{asset('images/background/field1.jpg')}})">
    <div class="col-md-6 col-md-offset-3">
        <div style="font-family:  Arial; font-size: large">
            <table class="table table-responsive table-condensed table-bordered" style="background-color: white">
                <thead style="font-weight: bolder;">
                <th>Name</th>
                <th>Logo</th>
                <th>League</th>
                <th>Country</th>
                <th>Home Arena</th>
                {% if is_granted("ROLE_ADMIN") %}
                <th>Actions</th>
                {% endif %}
                </thead>
                <tbody>
                {% for team in teams %}
                    <tr id="{{ team.id }}">
                        <td><h3><b>{{ team.name }}</b></h3></td>
                        <td><img src="{{ asset('images/logos/'~team.logo~'.png') }}"
                                 width="60px" height="60px"></td>
                        <td><img src="{{ asset('images/leagues/'~team.league~'.png') }}"
                                 width="60px" height="55px"></td>
                        <td><img src="{{ asset('images/countries/'~team.country~'.png') }}"
                                width="65px" height="50px"></td>
                        <td><h3><b>{{ team.homeArena }}</b></h3></td>
                        {% if is_granted("ROLE_ADMIN") %}
                        <td>
                            <a href="/team/editTeam/{{ team.id }}" class="btn btn-primary">Edit</a>
                            <a href="/team/deleteTeam/{{ team.id }}" class="btn btn-danger">Delete</a>
                        </td>
                        {% endif %}
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% if is_granted("ROLE_ADMIN") %}
            <a href="/team/addTeam" class="btn btn-success">Add team</a>
            <a href="/" class="btn btn-warning">Back</a>
        {% endif %}
        </div>
    </div>
{% endblock %}
{% block javascripts %}

{% endblock %}

